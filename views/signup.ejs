<body>
    <h1>hwllo</h1>
    <div class="mycontainer shadow-sm p-3 mb-5 bg-white rounded">

        <div class="container mycontainer2 shadow-sm p-3 mb-5 bg-white rounded col">
            <form action="/login/newuser" method="POST">
                <div class="form-group">
                    <label for="exampleInputEmail1">USERNAME</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" name="uname"
                    aria-describedby="emailHelp" placeholder="Enter your username" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" name="password" id="exampleInputPassword1"
                    placeholder="Password" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Your Full name</label>
                    <input type="text" class="form-control" name="name" id="exampleInputPassword1" required
                    placeholder="enter your name">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Date of Birth</label>
                    <input type="date" class="form-control" name="dob" id="exampleInputPassword1" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">address</label>
                    <input type="text" class="form-control" name="address" id="exampleInputPassword1" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">emailid</label>
                    <input type="email" class="form-control" name="emailid" id="exampleInputPassword1" placeholder="emailid" required>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">phone</label>
                    <input type="tel" class="form-control" name="phone" id="exampleInputPassword1"  required>
                </div>

                <button type="submit" class="btn btn-success " style="margin: auto;">LOGIN</button>
                <% if(mes=="true"){%>
                    <p class="message">USERNAME already exists, try another</p>
                    <%}%>
                </div>
                </body>
